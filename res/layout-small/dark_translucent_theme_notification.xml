<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/notification_linear_layout"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:gravity="center_vertical|fill_horizontal"
    android:background="@drawable/dark_translucent_panel">
	<RelativeLayout
	    android:id="@+id/header_navigation"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:gravity="center"
	    android:padding="2dp" >
	    <Button
	    	android:id="@+id/previous_button" 
	     	android:layout_height="wrap_content"
	     	android:layout_width="wrap_content"
	      	android:layout_alignParentLeft="true"
	      	android:layout_alignParentTop="true"
			android:hapticFeedbackEnabled="true"
	      	android:background="@drawable/btn_prev_arrow" />
	    <ImageView
	        android:id="@+id/tts_button_image_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/previous_button"
	        android:layout_toRightOf="@+id/previous_button"
	        android:background="@drawable/ic_tts"
	        android:padding="5dp" />
	    <TextView
	        android:id="@+id/notification_count_text_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/reschedule_image_view"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:clickable="true"
	        android:focusable="true"
	        android:gravity="center"
	        android:text="0/0"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/white" />
		<ImageView
		    android:id="@+id/reschedule_button_image_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/next_button"
		    android:layout_toLeftOf="@+id/next_button"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@drawable/ic_reschedule_white" />
	    <Button
	    	android:id="@+id/next_button" 
	      	android:layout_height="wrap_content"
	      	android:layout_width="wrap_content"
	      	android:layout_alignParentRight="true"
	      	android:layout_alignParentTop="true"
			android:hapticFeedbackEnabled="true"
	      	android:background="@drawable/btn_next_arrow"/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/contact_main_linear_layout"
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_gravity="left"
		android:focusable="true" 
		android:clickable="true"
		android:hapticFeedbackEnabled="true">	
		<LinearLayout
			android:id="@+id/contact_wrapper_linear_layout"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_gravity="fill_horizontal"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/list_selector_background_blue">
			<ImageView
				android:id="@+id/contact_photo_image_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_vertical"
				android:scaleType="center"
				android:background="@drawable/image_picture_frame_white" />	
			<ProgressBar 
				android:id="@+id/contact_photo_progress_bar" 
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_margin="42dp"
				style="@android:style/Widget.ProgressBar.Small" />		
			<LinearLayout
				android:id="@+id/contact_info_linear_layout"
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="left"
				android:paddingLeft="5dp">
				<LinearLayout
					android:id="@+id/notification_info_linear_layout"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:orientation="horizontal" 
					android:layout_gravity="center_vertical">
					<ImageView
						android:id="@+id/notification_type_icon_image_view"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:layout_gravity="center"/>
					<TextView
						android:id="@+id/notification_info_text_view"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" 
						android:layout_gravity="center_vertical" 
	    				android:textColor="@color/white"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:paddingLeft="5dp" />
				</LinearLayout>
				<TextView
					android:id="@+id/contact_name_text_view"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
		            android:singleLine="true"
		            android:ellipsize="none"
					android:layout_gravity="left"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:maxLines="1" 
					android:textStyle="bold" 
	    			android:textColor="@color/white" />
				<TextView
					android:id="@+id/contact_number_text_view"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:layout_gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:maxLines="1" 
	    			android:textColor="@color/white" />
			</LinearLayout>
		</LinearLayout>
		<TextView
			android:id="@+id/mms_link_text_view"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_gravity="center"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:gravity="center"
			android:padding="15dp" 
			android:selectAllOnFocus="true" 
			android:textColor="@color/white"
			android:focusable="true" 
			android:clickable="true" 
			android:hapticFeedbackEnabled="true"
			android:textStyle="bold"
			android:visibility="gone"
			android:text="@string/mms_click_here_to_view" />
		<TextView
			android:id="@+id/notification_details_text_view"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"  
			android:maxLines="5"
			android:layout_gravity="left"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:textColor="@color/white" 
			android:textColorLink="@color/white"
			android:gravity="left" 
			android:autoLink="all"
			android:scrollbars="vertical"
			android:padding="5dp" 
			android:selectAllOnFocus="true"/>
	</LinearLayout>	
	<LinearLayout 
		android:id="@+id/button_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:orientation="vertical" 
		android:layout_gravity="center_horizontal" 
		android:padding="2dp" 
		android:gravity="center">
		<Button
			android:id="@+id/reply_sms_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/btn_dark_translucent"
			android:drawableLeft="@drawable/ic_conversation_white_small" 
	    	android:textColor="@color/white"
			android:text="@string/reply_button_text" />
		<Button
			android:id="@+id/reply_email_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/btn_dark_translucent"
			android:drawableLeft="@drawable/ic_envelope_white" 
	    	android:textColor="@color/white"
			android:text="@string/reply_button_text" />	
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_gravity="center_horizontal" 
			android:padding="2dp" 
			android:gravity="center">
			<Button
				android:id="@+id/dismiss_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:drawableLeft="@drawable/ic_delete_white" 
		    	android:textColor="@color/white" 
				android:text="@string/dismiss_button_text" />
			<Button
				android:id="@+id/delete_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:drawableLeft="@drawable/ic_delete_red" 
		    	android:textColor="@color/white" 
				android:text="@string/delete_button_text" />
			<Button
				android:id="@+id/call_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:drawableLeft="@drawable/ic_call_white" 
		    	android:textColor="@color/white"
				android:text="@string/call_button_text" />
			<Button
				android:id="@+id/view_calendar_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:drawableLeft="@drawable/ic_calendar_event_white" 
		    	android:textColor="@color/white"
				android:text="@string/view_button_text" />
		</LinearLayout>  
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/image_button_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:orientation="vertical" 
		android:layout_gravity="center_horizontal" 
		android:padding="2dp" 
		android:gravity="center">
		<ImageButton
			android:id="@+id/reply_sms_image_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/btn_dark_translucent"
			android:scaleType="center"
			android:src="@drawable/ic_conversation_white_small" />
		<ImageButton
			android:id="@+id/reply_email_image_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dp"
			android:layout_marginRight="1dp"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/btn_dark_translucent"
			android:scaleType="center"
			android:src="@drawable/ic_envelope_white" />	
		<LinearLayout 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_gravity="center_horizontal" 
			android:padding="2dp" 
			android:gravity="center">
			<ImageButton
				android:id="@+id/dismiss_image_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:scaleType="center"
				android:src="@drawable/ic_delete_white" />
			<ImageButton
				android:id="@+id/delete_image_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:scaleType="center"
				android:src="@drawable/ic_delete_red" />
			<ImageButton
				android:id="@+id/call_image_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:scaleType="center"
				android:src="@drawable/ic_call_white" />
			<ImageButton
				android:id="@+id/view_calendar_image_button"  
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:layout_weight="1"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:gravity="center_vertical|center_horizontal"
				android:hapticFeedbackEnabled="true"
				android:background="@drawable/btn_dark_translucent"
				android:scaleType="center"
				android:src="@drawable/ic_calendar_event_white" />
		</LinearLayout>  
	</LinearLayout>
</LinearLayout>