<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/quick_reply_linear_layout"
  	android:layout_width="fill_parent"
  	android:layout_height="250dip"
  	android:orientation="vertical">
  	<LinearLayout
  		android:id="@+id/send_to_linear_layout"
  		android:layout_height="wrap_content"
    	android:orientation="horizontal" android:layout_width="fill_parent">
    	<TextView
      		android:layout_height="wrap_content"
      		android:layout_marginTop="5dip"
      		android:id="@+id/send_to_text_view"
      		android:textAppearance="?android:attr/textAppearanceMedium"
      		android:text="@string/to_text"
      		android:lines="1"
     		android:layout_marginRight="3dip"
      		android:layout_marginLeft="3dip" 
      		android:layout_width="wrap_content" />
		<EditText 
			android:id="@+id/send_to_edit_text" 
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
        	android:maxLines="1"
        	android:maxLength="40" />
  	</LinearLayout>
	<LinearLayout
		android:id="@+id/message_linear_layout"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="5dip"
    	android:paddingBottom="5dip"
    	android:paddingLeft="3dip"
    	android:paddingRight="3dip">
		<EditText 
			android:id="@+id/message_edit_text" 
			android:layout_width="fill_parent"
        	android:maxLines="3"
        	android:maxLength="1000"
        	android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
        	android:imeOptions="actionSend|flagNoEnterAction" 
        	android:layout_height="125dip" />
	</LinearLayout>
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="4dip"
    	android:paddingLeft="2dip"
    	android:paddingRight="2dip"
    	android:background="@color/darker_gray">
    	<Button
      		android:id="@+id/quick_reply_send_button"
      		android:layout_width="wrap_content"
      		android:layout_height="fill_parent"
      		android:layout_marginLeft="2dip"
      		style="?android:attr/buttonStyle"
      		android:layout_gravity="center_vertical"
      		android:nextFocusLeft="@+id/embedded_text_editor"
      		android:text="@string/send_button_text" 
      		android:layout_weight="1" />
		<Button 
			android:id="@+id/quick_reply_cancel_button" 
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent" 
			android:layout_marginRight="2dip" 
			android:layout_gravity="center" 
			android:text="@string/cancel_button_text" 
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>