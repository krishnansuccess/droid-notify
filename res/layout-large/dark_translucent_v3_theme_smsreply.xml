<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/quick_reply_linear_layout"
  	android:orientation="vertical"
    android:layout_height="wrap_content"
  	android:layout_width="wrap_content"
    android:minWidth="300dip"
    android:background="@drawable/dark_translucent_v3_panel">
  	<LinearLayout
  		android:id="@+id/quick_reply_title_linear_layout"
    	android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
    	android:padding="5dip">
    	<TextView
      		android:id="@+id/quick_reply_title_text_view"
      		android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
     		android:layout_marginRight="3dip"
      		android:layout_marginLeft="3dip"
      		android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:textColor="@color/white"
			android:drawableLeft="@drawable/ic_conversation_white"
      		android:text="@string/quick_reply"
      		android:drawablePadding="5dip" 
      		android:gravity="center_horizontal"/>
  	</LinearLayout>
	<ImageView
  		android:src="@drawable/divider_white"
  		android:layout_height="1dip"  
		android:layout_width="fill_parent"/>
  	<LinearLayout
  		android:id="@+id/send_to_linear_layout"
    	android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
    	android:padding="5dip" >
    	<TextView 
      		android:id="@+id/send_to_text_view"
      		android:layout_height="wrap_content"
      		android:layout_width="wrap_content"
      		android:layout_marginTop="2dip"
      		android:layout_marginLeft="2dip"
      		android:layout_marginRight="2dip"
      		android:textAppearance="?android:attr/textAppearanceSmall" 
	    	android:textColor="@color/white"
      		android:lines="1" />
  	</LinearLayout>
	<EditText 
		android:id="@+id/message_edit_text" 
        android:layout_height="125dip" 
		android:layout_width="fill_parent"
        android:maxLines="3"
        android:maxLength="160"
        android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
        android:imeOptions="actionSend|flagNoEnterAction" 
        android:gravity="left|top"/>
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dip">
    	<Button
      		android:id="@+id/quick_reply_send_button"
      		android:layout_height="fill_parent"
      		android:layout_width="wrap_content"
      		android:layout_marginLeft="2dip"
      		android:layout_marginRight="2dip"
      		android:layout_gravity="center_vertical" 
      		android:layout_weight="1"
      		android:nextFocusLeft="@+id/message_edit_text"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
      		android:text="@string/send_button_text" />
		<Button 
			android:id="@+id/quick_reply_cancel_button" 
			android:layout_height="fill_parent"  
			android:layout_width="wrap_content"
      		android:layout_marginLeft="2dip"
      		android:layout_marginRight="2dip" 
			android:layout_gravity="center"  
			android:layout_weight="1"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/cancel_button_text" />
	</LinearLayout>
</LinearLayout>