<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/notification_linear_layout"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent" 
    android:gravity="center_vertical|fill_horizontal"
    android:background="@drawable/dark_translucent_panel">
	<RelativeLayout
    	android:id="@+id/header_navigation"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:gravity="center"
    	android:padding="2dp">
	    <Button
	    	android:id="@+id/previous_button" 
	     	android:layout_height="wrap_content"
	     	android:layout_width="wrap_content"
	      	android:layout_alignParentLeft="true"
	      	android:layout_alignParentTop="true"
			android:hapticFeedbackEnabled="true"
	      	android:background="@drawable/btn_prev_arrow" />
	    <TextView
	    	android:id="@+id/notification_count_text_view"
	    	android:layout_height="50dip"  
	    	android:layout_width="wrap_content" 
	    	android:layout_alignParentTop="true"
	    	android:layout_toRightOf="@+id/previous_button" 
	    	android:layout_toLeftOf="@+id/next_button"
	    	android:gravity="center"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:textColor="@color/white"
	    	android:text="0/0"/>
	    <Button
	    	android:id="@+id/next_button" 
	      	android:layout_height="wrap_content"
	      	android:layout_width="wrap_content"
	      	android:layout_alignParentRight="true"
	      	android:layout_alignParentTop="true"
			android:hapticFeedbackEnabled="true"
	      	android:background="@drawable/btn_next_arrow"/>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/contact_main_linear_layout"
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_gravity="left"
		android:focusable="true" 
		android:clickable="true"
		android:hapticFeedbackEnabled="true">	
		<LinearLayout
			android:id="@+id/contact_wrapper_linear_layout"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:layout_gravity="fill_horizontal"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true"
			android:background="@drawable/list_selector_background_blue">
			<ImageView
				android:id="@+id/contact_photo_image_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="center_vertical"
				android:scaleType="center"
				android:background="@drawable/image_picture_frame_white" />			
			<LinearLayout
				android:id="@+id/contact_info_wrapper_linear_layout"
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_gravity="left"
				android:paddingLeft="5dip">
				<LinearLayout
					android:id="@+id/contact_info_linear_layout"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal" 
					android:layout_gravity="center_vertical">
					<ImageView
						android:id="@+id/notification_type_icon_image_view"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:layout_gravity="center"/>
					<TextView
						android:id="@+id/notification_info_text_view"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content" 
						android:layout_gravity="center_vertical" 
	    				android:textColor="@color/white"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:paddingLeft="5dip"/>
				</LinearLayout>
				<TextView
					android:id="@+id/contact_name_text_view"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_gravity="left"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:maxLines="1" 
					android:textStyle="bold" 
	    			android:textColor="@color/white" />
				<TextView
					android:id="@+id/contact_number_text_view"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:maxLines="1" 
	    			android:textColor="@color/white"  />
			</LinearLayout>
		</LinearLayout>
		<TextView
			android:id="@+id/notification_details_text_view"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"  
			android:maxLines="5"
			android:layout_gravity="left"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:textColor="@color/white" 
			android:textColorLink="@color/white"
			android:gravity="left" 
			android:autoLink="all"
			android:scrollbars="vertical"
			android:padding="5dip" 
			android:selectAllOnFocus="true"/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/phone_button_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:layout_gravity="center_horizontal" 
		android:padding="2dip" 
		android:gravity="center">
		<Button
			android:id="@+id/phone_dismiss_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_delete_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/dismiss_button_text" />
		<Button
			android:id="@+id/phone_call_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_call_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/call_button_text" />
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/sms_button_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:layout_gravity="center_horizontal" 
		android:padding="2dip" 
		android:gravity="center">
		<Button
			android:id="@+id/sms_dismiss_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_delete_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/dismiss_button_text" />
		<Button
			android:id="@+id/sms_delete_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_delete_red"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent" 
			android:text="@string/delete_button_text" />
		<Button
			android:id="@+id/sms_reply_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_conversation_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/reply_button_text" />
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/calendar_button_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:layout_gravity="center_horizontal" 
		android:padding="2dip" 
		android:gravity="center">
		<Button
			android:id="@+id/calendar_dismiss_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_weight="1" 
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_delete_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent" 
			android:text="@string/dismiss_button_text" />
		<Button
			android:id="@+id/calendar_view_button"  
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:gravity="center_vertical|center_horizontal"
			android:drawableLeft="@drawable/ic_calendar_event_white"
			android:hapticFeedbackEnabled="true" 
	    	android:textColor="@color/white"
			android:background="@drawable/btn_dark_translucent"
			android:text="@string/view_button_text" />
	</LinearLayout>
</LinearLayout>