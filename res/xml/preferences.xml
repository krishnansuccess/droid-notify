<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:droidnotify="http://schemas.android.com/apk/res/apps.droidnotify"
	android:key="preference_screen">
	<PreferenceCategory
		android:key="test_app_category"
		android:title="@string/test_text">
		<Preference
            android:key="test_app"
        	android:title="@string/test_app_text"
          	android:summary="@string/test_app_summary"
        	android:dependency="app_enabled" />
    </PreferenceCategory>      	
	<PreferenceCategory
		android:key="main_setting_category"
		android:title="@string/preference_general">
		<CheckBoxPreference
			android:key="app_enabled" 
        	android:title="@string/preference_appenabled_title" 
        	android:summaryOn="@string/preference_appenabled_summaryOn" 
        	android:summaryOff="@string/preference_appenabled_summaryOff" 
        	android:defaultValue="true" />
		<CheckBoxPreference
			android:key="haptic_feedback_enabled" 
        	android:title="@string/preference_haptic_feedback_title" 
        	android:summaryOn="@string/preference_haptic_feedback_summaryOn" 
        	android:summaryOff="@string/preference_haptic_feedback_summaryOff" 
        	android:defaultValue="true"
        	android:dependency="app_enabled" />
    	<CheckBoxPreference 
			android:key="app_vibrations_enabled" 
			android:title="@string/preference_vibrations_enabled_title" 
			android:summaryOn="@string/preference_vibrations_enabled_summaryOn" 
			android:summaryOff="@string/preference_vibrations_enabled_summaryOff" 
			android:defaultValue="true"
			android:dependency="app_enabled" />
		<CheckBoxPreference 
			android:key="app_ringtones_enabled" 
			android:title="@string/preference_ringtones_enabled_title" 
			android:summaryOn="@string/preference_ringtones_enabled_summaryOn" 
			android:summaryOff="@string/preference_ringtones_enabled_summaryOff" 
			android:defaultValue="false"
			android:dependency="app_enabled" />
  	</PreferenceCategory>
	<PreferenceCategory
		android:key="notification_settings_category"
		android:title="@string/preference_notification_settings">
		<PreferenceScreen
			android:key="notifications_enabled_settings_screen"
			android:title="@string/preference_notifications"
			android:dependency="app_enabled">
			<PreferenceCategory
				android:key="theme_settings_category"
				android:title="@string/theme_text">
				<apps.droidnotify.preferences.ImageListPreference
					android:key="app_theme"
					android:title="@string/theme_text"
					android:summary="@string/preference_theme_summary"
					android:entries="@array/theme_options"
					android:entryValues="@array/theme_values"
					droidnotify:entryImages="@array/theme_images"
					android:defaultValue="android"
					android:dependency="app_enabled" />
			</PreferenceCategory>
			<PreferenceCategory
				android:key="sms_notification_settings_category"
				android:title="@string/preference_sms_notifications">
				<CheckBoxPreference 
					android:key="sms_notifications_enabled" 
					android:title="@string/preference_sms_enabled_title" 
					android:summaryOn="@string/preference_sms_enabled_summaryOn" 
					android:summaryOff="@string/preference_sms_enabled_summaryOff" 
					android:defaultValue="true" />
				<CheckBoxPreference 
					android:key="sms_display_unread_enabled" 
					android:title="@string/preference_sms_display_unread_enabled_title" 
					android:summaryOn="@string/preference_sms_display_unread_enabled_summaryOn" 
					android:summaryOff="@string/preference_sms_display_unread_enabled_summaryOff" 
					android:defaultValue="true"
					android:dependency="sms_notifications_enabled" />
				<PreferenceScreen
					android:key="sms_button_settings_screen"
					android:title="@string/preference_sms_button_settings"
					android:dependency="sms_notifications_enabled">
					<CheckBoxPreference
						android:key="confirm_sms_deletion_enabled" 
        				android:title="@string/preference_confirm_sms_deletion_enabled_title" 
        				android:summaryOn="@string/preference_confirm_sms_deletion_enabled_summaryOn" 
        				android:summaryOff="@string/preference_confirm_sms_deletion_enabled_summaryOff" 
        				android:defaultValue="true" />
					<ListPreference
						android:key="sms_dismiss_button_action"
						android:title="@string/preference_dismiss_button_action"
						android:summary="@string/preference_sms_dismiss_button_action_summary"
						android:defaultValue="0"
						android:entries="@array/sms_dismiss_button_options"
						android:entryValues="@array/sms_dismiss_button_options_values"/>
					<ListPreference
						android:key="sms_delete_button_action"
						android:title="@string/preference_delete_button_action"
						android:summary="@string/preference_sms_delete_button_action_summary"
						android:defaultValue="0"
						android:entries="@array/sms_delete_button_options"
						android:entryValues="@array/sms_delete_button_options_values"/>
					<ListPreference
						android:key="sms_reply_button_action"
						android:title="@string/preference_reply_button_action"
						android:summary="@string/preference_sms_reply_button_action_summary"
						android:defaultValue="0"
						android:entries="@array/sms_reply_button_options"
						android:entryValues="@array/sms_reply_button_options_values"/>
				</PreferenceScreen>
				<PreferenceScreen
					android:key="sms_vibrate_settings_screen"
					android:title="@string/preference_sms_vibrate_settings"
					android:dependency="sms_notifications_enabled">
					<CheckBoxPreference 
						android:key="sms_vibrate_enabled" 
						android:title="@string/preference_sms_vibrate_enabled_title" 
						android:summaryOn="@string/preference_sms_vibrate_enabled_summaryOn" 
						android:summaryOff="@string/preference_sms_vibrate_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_vibrations_enabled" />
				</PreferenceScreen>
				<PreferenceScreen
					android:key="sms_ringtone_settings_screen"
					android:title="@string/preference_sms_ringtone_settings"
					android:dependency="sms_notifications_enabled">
					<CheckBoxPreference 
						android:key="sms_ringtone_enabled" 
						android:title="@string/preference_sms_ringtone_enabled_title" 
						android:summaryOn="@string/preference_sms_ringtone_enabled_summaryOn" 
						android:summaryOff="@string/preference_sms_ringtone_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_ringtones_enabled" />
					<RingtonePreference 
						android:key="sms_ringtone_audio" 
						android:showDefault="true"
         				android:title="@string/preference_select_ringtone"
         				android:ringtoneType="notification"
						android:dependency="sms_ringtone_enabled" />
				</PreferenceScreen>
  			</PreferenceCategory>
			<PreferenceCategory
				android:key="missed_call_notification_settings_category"
				android:title="@string/preference_missed_call_notifications">
				<CheckBoxPreference 
					android:key="missed_call_notifications_enabled" 
					android:title="@string/preference_missed_call_enabled_title" 
					android:summaryOn="@string/preference_missed_call_enabled_summaryOn" 
					android:summaryOff="@string/preference_missed_call_enabled_summaryOff" 
					android:defaultValue="true" />
				<PreferenceScreen
					android:key="missed_call_button_settings_screen"
					android:title="@string/preference_missed_call_button_settings"
					android:dependency="missed_call_notifications_enabled">
					<ListPreference
						android:key="missed_call_dismiss_button_action"
						android:title="@string/preference_dismiss_button_action"
						android:summary="@string/preference_missed_call_dismiss_button_action_summary"
						android:defaultValue="0"
						android:entries="@array/missed_call_dismiss_button_options"
						android:entryValues="@array/missed_call_dismiss_button_options_values"/>
				</PreferenceScreen>
				<PreferenceScreen
					android:key="missed_call_vibrate_settings_screen"
					android:title="@string/preference_missed_call_vibrate_settings"
					android:dependency="missed_call_notifications_enabled">
					<CheckBoxPreference 
						android:key="missed_call_vibrate_enabled" 
						android:title="@string/preference_missed_call_vibrate_enabled_title" 
						android:summaryOn="@string/preference_missed_call_vibrate_enabled_summaryOn" 
						android:summaryOff="@string/preference_missed_call_vibrate_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_vibrations_enabled" />
				</PreferenceScreen>
				<PreferenceScreen
					android:key="missed_call_ringtone_settings_screen"
					android:title="@string/preference_missed_call_ringtone_settings"
					android:dependency="missed_call_notifications_enabled">
					<CheckBoxPreference 
						android:key="missed_call_ringtone_enabled" 
						android:title="@string/preference_missed_call_ringtone_enabled_title" 
						android:summaryOn="@string/preference_missed_call_ringtone_enabled_summaryOn" 
						android:summaryOff="@string/preference_missed_call_ringtone_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_ringtones_enabled" />
					<RingtonePreference 
						android:key="missed_call_ringtone_audio" 
						android:showDefault="true"
         				android:title="@string/preference_select_ringtone"
         				android:ringtoneType="notification"
						android:dependency="missed_call_ringtone_enabled" />
				</PreferenceScreen>
			</PreferenceCategory>
			<PreferenceCategory
				android:key="calendar_notification_settings_category"
				android:title="@string/preference_calendar_notifications">
				<CheckBoxPreference 
					android:key="calendar_notifications_enabled" 
					android:title="@string/preference_calendar_enabled_title" 
					android:summaryOn="@string/preference_calendar_enabled_summaryOn" 
					android:summaryOff="@string/preference_calendar_enabled_summaryOff" 
					android:defaultValue="true" />
				<apps.droidnotify.preferences.SelectCalendarListPreference
                	android:key="calendar_selection"
                	android:title="@string/preference_calendar_selection_title"
                	android:summary="@string/preference_calendar_selection_summary" 
					android:dependency="calendar_notifications_enabled"/>
				<CheckBoxPreference 
					android:key="calendar_labels_enabled" 
					android:title="@string/preference_calendar_labels_enabled_title" 
					android:summaryOn="@string/preference_calendar_labels_enabled_summaryOn" 
					android:summaryOff="@string/preference_calendar_labels_enabled_summaryOff" 
					android:defaultValue="true"
					android:dependency="calendar_notifications_enabled" />
				<PreferenceScreen
					android:key="calendar_button_settings_screen"
					android:title="@string/preference_calendar_button_settings"
					android:dependency="calendar_notifications_enabled">
					<ListPreference
						android:key="calendar_dismiss_button_action"
						android:title="@string/preference_dismiss_button_action"
						android:summary="@string/preference_calendar_dismiss_button_action_summary"
						android:defaultValue="0"
						android:entries="@array/calendar_dismiss_button_options"
						android:entryValues="@array/calendar_dismiss_button_options_values"/>
				</PreferenceScreen>
				<ListPreference
					android:key="calendar_reminder_settings"
					android:title="@string/preference_event_reminder_settings"
					android:summary="@string/preference_event_reminder_summary"
					android:defaultValue="15"
					android:entries="@array/calendar_reminder_options"
					android:entryValues="@array/calendar_reminder_options_values"
					android:dependency="calendar_notifications_enabled" />
				<ListPreference
					android:key="calendar_reminder_all_day_settings"
					android:title="@string/preference_event_reminder_all_day_settings"
					android:summary="@string/preference_event_reminder_all_day_summary"
					android:defaultValue="6"
					android:entries="@array/calendar_reminder_all_day_options"
					android:entryValues="@array/calendar_reminder_all_day_options_values"
					android:dependency="calendar_notifications_enabled" />
				<PreferenceScreen
					android:key="calendar_vibrate_settings_screen"
					android:title="@string/preference_calendar_vibrate_settings"
					android:dependency="calendar_notifications_enabled">
					<CheckBoxPreference 
						android:key="calendar_vibrate_enabled" 
						android:title="@string/preference_calendar_vibrate_enabled_title" 
						android:summaryOn="@string/preference_calendar_vibrate_enabled_summaryOn" 
						android:summaryOff="@string/preference_calendar_vibrate_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_vibrations_enabled" />
				</PreferenceScreen>
				<PreferenceScreen
					android:key="calendar_ringtone_settings_screen"
					android:title="@string/preference_calendar_ringtone_settings"
					android:dependency="calendar_notifications_enabled">
					<CheckBoxPreference 
						android:key="calendar_ringtone_enabled" 
						android:title="@string/preference_calendar_ringtone_enabled_title" 
						android:summaryOn="@string/preference_calendar_ringtone_enabled_summaryOn" 
						android:summaryOff="@string/preference_calendar_ringtone_enabled_summaryOff" 
						android:defaultValue="true"
						android:dependency="app_ringtones_enabled" />
					<RingtonePreference 
						android:key="calendar_ringtone_audio" 
						android:showDefault="true"
         				android:title="@string/preference_select_ringtone"
         				android:ringtoneType="notification"
						android:dependency="calendar_ringtone_enabled" />
				</PreferenceScreen>
			</PreferenceCategory>
		</PreferenceScreen>
  	</PreferenceCategory>
	<PreferenceCategory
		android:key="screen_settings_category"
		android:title="@string/preference_screen_settings">
		<PreferenceScreen
			android:key="screen_settings_screen"
			android:title="@string/preference_screen_settings"
			android:dependency="app_enabled">
			<CheckBoxPreference 
				android:key="screen_enabled" 
				android:title="@string/preference_screen_enabled_title" 
				android:summaryOn="@string/preference_screen_enabled_summaryOn" 
				android:summaryOff="@string/preference_screen_enabled_summaryOff" 
				android:defaultValue="true" />
			<CheckBoxPreference 
				android:key="screen_dim_enabled" 
				android:title="@string/preference_screen_dim_enabled_title" 
				android:summaryOn="@string/preference_screen_dim_enabled_summaryOn" 
				android:summaryOff="@string/preference_screen_dim_enabled_summaryOff" 
				android:defaultValue="true"
				android:dependency="screen_enabled" />
			<CheckBoxPreference 
				android:key="keyguard_enabled" 
				android:title="@string/preference_keyguard_enabled_title" 
				android:summaryOn="@string/preference_keyguard_enabled_summaryOn" 
				android:summaryOff="@string/preference_keyguard_enabled_summaryOff" 
				android:defaultValue="true"
				android:dependency="screen_enabled" />
			<CheckBoxPreference 
				android:key="blur_screen_enabled" 
				android:title="@string/preference_blur_screen_enabled_title" 
				android:summaryOn="@string/preference_blur_screen_enabled_summaryOn" 
				android:summaryOff="@string/preference_blur_screen_enabled_summaryOff" 
				android:defaultValue="false"
				android:dependency="screen_enabled" />
			<CheckBoxPreference 
				android:key="dim_screen_enabled" 
				android:title="@string/preference_dim_screen_enabled_title" 
				android:summaryOn="@string/preference_dim_screen_enabled_summaryOn" 
				android:summaryOff="@string/preference_dim_screen_enabled_summaryOff" 
				android:defaultValue="false"
				android:dependency="screen_enabled" />
			<ListPreference
				android:key="dim_screen_amount_settings"
				android:title="@string/preference_dim_screen_amount"
				android:summary="@string/preference_dim_screen_amount_summary"
				android:defaultValue="50"
				android:entries="@array/dim_screen_amount_options"
				android:entryValues="@array/dim_screen_amount_options_values"
				android:dependency="dim_screen_enabled" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="misc_settings_category"
		android:title="@string/misc_settings_text">
		<PreferenceScreen
			android:key="misc_settings_screen"
			android:title="@string/misc_settings_text"
			android:dependency="app_enabled">
			<apps.droidnotify.preferences.ImageListPreference
				android:key="contact_placeholder"
				android:title="@string/preference_contact_placeholder_image"
				android:summary="@string/preference_contact_placeholder_image_summary"
				android:entries="@array/contact_placeholder_options"
				android:entryValues="@array/contact_placeholder_values"
				android:defaultValue="0"
				droidnotify:entryImages="@array/contact_placeholder_images" />
			<CheckBoxPreference
				android:key="landscape_screen_enabled" 
        		android:title="@string/preference_landscape_screen_enabled_title" 
        		android:summaryOn="@string/preference_landscape_screen_enabled_summaryOn" 
        		android:summaryOff="@string/preference_landscape_screen_enabled_summaryOff" 
        		android:defaultValue="false" />
			<CheckBoxPreference
				android:key="button_icons_enabled" 
        		android:title="@string/preference_button_icons_enabled_title" 
        		android:summaryOn="@string/preference_button_icons_enabled_summaryOn" 
        		android:summaryOff="@string/preference_button_icons_enabled_summaryOff" 
        		android:defaultValue="true" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="advanced_settings_category"
		android:title="@string/advanced_settings_text">
		<PreferenceScreen
			android:key="advanced_settings_screen"
			android:title="@string/advanced_settings_text"
			android:dependency="app_enabled">
			<ListPreference
				android:key="reschedule_notification_timeout_settings"
				android:title="@string/preference_reschedule_timeout"
				android:summary="@string/preference_reschedule_timeout_summary"
				android:defaultValue="5"
				android:entries="@array/reschedule_notification_timeout_options"
				android:entryValues="@array/reschedule_notification_timeout_options_values"
				android:dependency="app_enabled" />
			<ListPreference
				android:key="wakelock_timeout_settings"
				android:title="@string/preference_wakelock_timeout"
				android:summary="@string/preference_wakelock_timeout_summary"
				android:defaultValue="300"
				android:entries="@array/wakelock_timeout_options"
				android:entryValues="@array/wakelock_timeout_options_values"
				android:dependency="app_enabled" />
			<ListPreference
				android:key="keyguard_timeout_settings"
				android:title="@string/preference_keyguard_timeout"
				android:summary="@string/preference_keyguard_timeout_summary"
				android:defaultValue="300"
				android:entries="@array/keyguard_timeout_options"
				android:entryValues="@array/keyguard_timeout_options_values"
				android:dependency="app_enabled" />
			<ListPreference
				android:key="quick_reply_sms_gateway_settings"
				android:title="@string/preference_quick_reply_sms_gateway"
				android:summary="@string/preference_quick_reply_sms_gateway_summary"
				android:defaultValue="1"
				android:entries="@array/quick_reply_sms_gateway_options"
				android:entryValues="@array/quick_reply_sms_gateway_options_values"
				android:dependency="app_enabled" />
			<ListPreference
				android:key="call_log_timeout_settings"
				android:title="@string/preference_call_log_timeout"
				android:summary="@string/preference_call_log_timeout_summary"
				android:defaultValue="5"
				android:entries="@array/call_log_timeout_options"
				android:entryValues="@array/call_log_timeout_options_values"
				android:dependency="missed_call_notifications_enabled" />
			<ListPreference
				android:key="ringtone_length_settings"
				android:title="@string/preference_ringtone_length"
				android:summary="@string/preference_ringtone_length_summary"
				android:defaultValue="3"
				android:entries="@array/ringtone_length_options"
				android:entryValues="@array/ringtone_length_options_values"
				android:dependency="app_ringtones_enabled" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory
		android:key="rate_app_category"
		android:title="@string/rate_app_text">
		<Preference
            android:key="rate_app"
        	android:title="@string/rate_app_text"
          	android:summary="@string/rate_app_summary" />
    </PreferenceCategory>       	
	<PreferenceCategory
		android:key="app_feedback_category"
		android:title="@string/feedback_text">
		<Preference
            android:key="email_developer"
        	android:title="@string/email_developer_text"
          	android:summary="@string/email_developer_summary" />
    </PreferenceCategory>        
	<PreferenceCategory
		android:key="app_info_category"
		android:title="@string/about_text">
  		<apps.droidnotify.preferences.AboutDialogPreference
  			android:key="about_droid_notify" 
  			android:dialogIcon="@drawable/ic_launcher_droidnotify"
  			android:dialogTitle="@string/app_name_formatted_version"
			android:title="@string/preference_about"
      		android:summary="@string/preference_about_summary"
      		android:dialogMessage="@string/preference_about_text"
      		android:positiveButtonText="@string/ok_text"
      		android:negativeButtonText="@null" />
	</PreferenceCategory>
	<PreferenceCategory
		android:key="app_license_category"
		android:title="@string/license_info">
  		<apps.droidnotify.preferences.AboutDialogPreference
  			android:key="droid_notify_license" 
  			android:dialogIcon="@drawable/ic_dialog_info"
  			android:dialogTitle="@string/app_license"
			android:title="@string/license"
      		android:summary="@string/app_license"
      		android:dialogMessage="@string/eula_text"
      		android:positiveButtonText="@string/ok_text"
      		android:negativeButtonText="@null" />
	</PreferenceCategory>
	<PreferenceCategory
		android:key="app_debug_category"
		android:title="Debug Purposes Only">
  		<Preference
            android:key="email_logs"
        	android:title="Send Developer Logs"
          	android:summary="Use this button to automatically email the developer the application logs that are stored on your phone." />
		<Preference
            android:key="clear_logs"
        	android:title="Clear Developer Logs"
          	android:summary="Use this button to clear the application logs that are stored on your phone." />
	</PreferenceCategory>
</PreferenceScreen>