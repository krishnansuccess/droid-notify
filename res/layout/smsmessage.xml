<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:minWidth="310dp"
	android:layout_width="fill_parent">
	<LinearLayout
		android:id="@+id/from_linear_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="left">
		<ImageView
			android:src="@android:drawable/ic_dialog_info"
			android:id="@+id/from_image_view"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			android:scaleType="center"
			android:layout_height="wrap_content"
			android:layout_margin="4dp" />
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:id="@+id/FromTextLinearLayout"
			android:padding="4dp">
			<TextView
				android:id="@+id/from_text_view"
				android:layout_width="fill_parent"
				android:gravity="center_vertical"
				android:autoLink="phone"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:maxLines="2"
				android:layout_height="wrap_content"
				android:text="Text Here"
				android:ellipsize="end"
				android:paddingBottom="2dp"
				android:textColorLink="?android:attr/textColorPrimaryDisableOnly" />
			<TextView
				android:id="@+id/header_text_view"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="?android:attr/textColorPrimaryDisableOnly"
				android:text="@string/nma_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:paddingTop="2dp" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:src="@android:drawable/divider_horizontal_dark"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:scaleType="fitXY"
  		android:paddingLeft="5dp"
  		android:paddingRight="5dp"
  		android:paddingBottom="2dp"
  		android:paddingTop="2dp" />
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:id="@+id/message_scroll_view"
		android:visibility="gone"
		android:layout_weight="1"
		android:paddingBottom="10dp"
		android:paddingTop="6dp">
		<TextView
			android:text="Text here"
			android:id="@+id/message_text_view"
			android:autoLink="all"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="?android:attr/textColorPrimaryDisableOnly"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:paddingRight="10dp"
			android:paddingLeft="10dp"
			android:textColorLink="?android:attr/textColorPrimaryDisableOnly" />
	</ScrollView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/mms_linear_layout"
		android:orientation="vertical"
		android:layout_weight="1"
		android:paddingBottom="12dp"
		android:paddingTop="12dp">
		<TextView
			android:autoLink="all"
			android:layout_width="fill_parent"
			android:paddingRight="5dp"
			android:paddingLeft="5dp"
			android:gravity="center"
			android:id="@+id/mms_subject_text_view"
			android:layout_height="wrap_content"
			android:paddingBottom="12dp"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/subject_text" />
		<Button
			android:layout_width="wrap_content"
			android:text="@string/view_mms_button_text"
			android:id="@+id/view_mms_button"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:minWidth="140dp" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:gravity="center"
		android:id="@+id/view_button_linear_layout"
		android:layout_height="fill_parent"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:layout_weight="1">
		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/view_button"
			android:text="@string/view_button_text"
			android:minWidth="140dp" />
	</LinearLayout>
</LinearLayout>